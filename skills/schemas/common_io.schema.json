{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "RiskMASCommonIO",
  "type": "object",
  "properties": {
    "intent": {
      "type": "object",
      "properties": {
        "date": {"type": "string"},
        "mode": {"type": "string", "enum": ["target", "delta"]},
        "targets": {"type": "object"}
      },
      "required": ["date", "mode", "targets"]
    },
    "context": {
      "type": "object",
      "properties": {
        "current_positions": {"type": "object"},
        "current_positions_date": {"type": "string"},
        "universe": {"type": "array", "items": {"type": "string"}},
        "policy_profile": {"type": "string"},
        "account_type": {"type": "string"},
        "jurisdiction": {"type": "string"},
        "aum": {"type": "number"}
      }
    }
  },
  "required": ["intent"]
}
