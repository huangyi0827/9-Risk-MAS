{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ComplianceFinding",
  "type": "object",
  "properties": {
    "agent": {"type": "string"},
    "risk_type": {"type": "string"},
    "severity": {"type": "integer", "minimum": 0, "maximum": 3},
    "summary": {"type": "string"},
    "policy_ids": {"type": "array", "items": {"type": "string"}},
    "evidence": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "ref": {"type": "string"},
          "value": {},
          "quote": {"type": "string"},
          "code": {"type": "string"},
          "status": {"type": "string"},
          "doc_title": {"type": "string"}
        },
        "required": ["ref"],
        "additionalProperties": true
      },
      "contains": {
        "type": "object",
        "properties": {
          "ref": {
            "type": "string",
            "pattern": "^rag:doc\\[\\d+\\]$"
          }
        },
        "required": ["ref"]
      }
    },
    "recommendations": {"type": "array", "items": {"type": "string"}},
    "metrics": {"type": "object"}
  },
  "required": ["severity", "summary", "evidence"]
}
